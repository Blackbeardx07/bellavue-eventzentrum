rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Hilfsfunktion: Prüft ob User existiert und welche Rolle er hat
    // WICHTIG: Muss fehlertolerant sein, falls User-Dokument noch nicht existiert
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null ? userDoc.data.role : null;
    }
    
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    function isAuthenticatedUser() {
      let role = getUserRole();
      return request.auth != null && (role == 'admin' || role == 'user');
    }
    
    // Users Collection
    // - User kann sein eigenes Dokument lesen
    // - User kann sein eigenes Dokument beim ersten Login schreiben (erstellen)
    // - Admins können alle User verwalten
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Events Collection
    // - Admin: Lesen und Schreiben
    // - User (Mitarbeiter): Nur Lesen
    // - Keine Authentifizierung: Kein Zugriff
    match /events/{eventId} {
      allow read: if isAuthenticatedUser();
      allow write: if isAdmin();
    }
    
    // Customers Collection
    // - Admin: Lesen und Schreiben
    // - User (Mitarbeiter): Nur Lesen
    // - Keine Authentifizierung: Kein Zugriff
    match /customers/{customerId} {
      allow read: if isAuthenticatedUser();
      allow write: if isAdmin();
    }
    
    // Alle anderen Collections blockieren
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

